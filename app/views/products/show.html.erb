<p id="notice"><%= notice %></p>

<h2>
  <%= @product.title %>
</h2>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <%= @product.full_description %>
</p>

<p>
  <strong>Preview image:</strong>
  <%= @product.preview_image %>
</p>

<h3 id="reviews">Reviews</h3>
<% if @reviews.present? %>
  <div class="reviews">
    <%= render @reviews %>
  </div>
<% else %>
  <p>No reviews.</p>
<% end %>

<h3>Add a review:</h3>
<%= render 'reviews/form' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
