<%= form_with(model: [ @product, @review], local: true) do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %></h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.select :rating, options_for_select([1, 2, 3, 4, 5], 5), {},
                    { id: 'rating', style: 'display: none;' }  %>
  </div>

  <div class="form-group">
    <%= form.text_area :text, placeholder: 'Review', class: 'form-control' %>
  </div>

  <%= recaptcha_tags %>

  <div class="actions">
    <%= form.submit class: 'btn btn-outline-primary' %>
  </div>
<% end %>
