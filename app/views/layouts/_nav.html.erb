<ul class="nav">
  <li class="nav-item">
    <%= link_to 'Home', root_path, class: 'nav-link'  %>
  </li>
  <% if current_user %>
    <li class="nav-item">
      <%= link_to user_path(current_user.id), class: 'nav-link' do %>
        <i class="fa fa-user-o" aria-hidden="true"></i>
        <%= current_user.name %>
      <% end %>
    </li>
  <% else %>
    <li class="nav-item">
      <%= link_to 'Log in', new_session_path, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= link_to 'Sign up', new_user_path, class: 'nav-link' %>
    </li>
  <% end %>
</ul>
